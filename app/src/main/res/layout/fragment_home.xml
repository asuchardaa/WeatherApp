<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:padding="16dp">

    <!-- ScrollView to scroll content across the entire screen -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/rounded_corner"
            android:layout_marginTop="20dp">

            <!-- City Name -->
            <TextView
                android:id="@+id/cityNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Město: Nová Paka"
                android:textSize="28sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:gravity="center"/>

            <!-- Temperature -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corner"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:src="@drawable/ic_temp"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:id="@+id/temperatureTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teplota: Načítání..."
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!-- Time of Measurement -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corner"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:src="@drawable/ic_clock"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:id="@+id/obsTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Čas měření: Načítání..."
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!-- Humidity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corner"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:src="@drawable/ic_humidity"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:id="@+id/humidityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vlhkost: Načítání..."
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!-- Wind Speed -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corner"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:src="@drawable/ic_wind"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:id="@+id/windSpeedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rychlost větru: Načítání..."
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!-- Air Pressure -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corner"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:src="@drawable/ic_pressure"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:id="@+id/pressureTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tlak vzduchu: Načítání..."
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!-- Precipitation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corner"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:src="@drawable/ic_rain"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:id="@+id/precipTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Srážky: Načítání..."
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!-- Elevation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_corner"
                android:padding="16dp"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:src="@drawable/ic_altitude"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"/>
                <TextView
                    android:id="@+id/elevTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Výška: Načítání..."
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
